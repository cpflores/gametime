<div class="devise-form-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="well">
          <h2>Login</h2>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), input_html: {class: 'form-horizontal'}) do |f| %>
            <%= f.error_notification %>

            <div class="form-group">
              <%= f.input :email, required: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label: false, placeholder: "Password", input_html: {class: "form-control"} %>
            </div>

            <div class="form-group">
              <%= f.button :submit, "Login", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>